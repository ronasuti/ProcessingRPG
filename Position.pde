class Position {
  //Simple 2D object that doesn't really *do* anything on it's own.
  
  //dimensions: x coord, y coord, width, height
  float x = 0;
  float y = 0;
  float w = 0;
  float h = 0;
  
  //transforms relative to world
  float xOffset = 0;
  float yOffset = 0;
  
  //scale
  float xScale = 0;
  float yScale = 0;
  
  //rotation, in rads
  float rotation = 0;
  
}